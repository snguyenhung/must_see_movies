          <div class="input-group-append" data-target='#directorgteqdobPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='directorlteqdobPicker' data-target-input="nearest">
          <%= f.text_field :director_dob_lteq, :class => "form-control datetimepicker-input", :placeholder => "Director Dob less than or equal to", :data => {:target => '#directorlteqdobPicker'} %>
          <div class="input-group-append" data-target='#directorlteqdobPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#directorgteqdobPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#directorlteqdobPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#directorgteqdobPicker').on("dp.change", function (e) {
              $('#directorlteqdobPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#directorlteqdobPicker').on("dp.change", function (e) {
              $('#directorgteqdobPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :user_reviews_email_cont, "User reviews email contains" %>
    <%= f.text_field :user_reviews_email_cont, :class => "form-control", :placeholder => "User reviews email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :dob, "Actor Dob" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='actorsgteqdobPicker' data-target-input="nearest">
          <%= f.text_field :actors_dob_gteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Dob greater than or equal to", :data => {:target => '#actorsgteqdobPicker'} %>
          <div class="input-group-append" data-target='#actorsgteqdobPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
