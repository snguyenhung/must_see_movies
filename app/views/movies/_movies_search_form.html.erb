  </div>
  <script type="text/javascript">
      $(function () {
          $('#actorsgteqdobPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#actorslteqdobPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#actorsgteqdobPicker').on("dp.change", function (e) {
              $('#actorslteqdobPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#actorslteqdobPicker').on("dp.change", function (e) {
              $('#actorsgteqdobPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/movies" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

