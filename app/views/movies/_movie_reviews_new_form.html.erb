<%= form_with(model: @interact, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :review, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :movie_id, value: @movie.id %>

  <div class="form-group">
    <%= f.label :bookmark %>

    <%= f.text_field :bookmark, class: "form-control" %>
  </div>

  <%= f.submit "Create interact", class: "btn btn-block btn-outline-secondary" %>
<% end %>
