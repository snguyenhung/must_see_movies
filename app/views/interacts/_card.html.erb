<div class="card mb-3">
  <h2 class="card-header h4">
    Interact #<%= interact.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @interact.user.present? %>
          <%= link_to interact.user, interact.user %>
        <% end %>
      </dd>

      <dt>Rating</dt>
      <dd><%= interact.rating %></dd>

      <dt>Review</dt>
      <dd><%= interact.review %></dd>

      <dt>Movie</dt>
      <dd>
        <% if @interact.movie.present? %>
          <%= link_to interact.movie, interact.movie %>
        <% end %>
      </dd>

      <dt>Bookmark</dt>
      <dd><%= interact.bookmark %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back interact, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @interact.user %>
          <%= link_to edit_interact_url(interact), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @interact.user %>
          <%= link_to interact, method: :delete, data: { confirm: "Do you really want to delete this interact?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(interact.updated_at) %> ago
  </div>
</div>
